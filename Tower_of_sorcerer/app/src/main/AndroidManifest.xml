<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.the95.tower_of_the_sorcerer">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_new"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_new_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.the95.tower_of_the_sorcerer.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.the95.tower_of_the_sorcerer.LoadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.the95.tower_of_the_sorcerer.Gamelogic"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.the95.tower_of_the_sorcerer.SaveActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>